\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{commonstyles}[2019/03/18 Styles prédéfinits pour la mise en forme d'une présentation avec Beamer et Tikz]

\RequirePackage{palettechum}
\RequirePackage{pgfplots}

\pgfplotsset{
	every axis/.append style={
		black!85,
		width=\textwidth,
		height= .7 \textheight,
		grid=none,
		enlarge x limits=false,
		enlarge y limits=upper,
		font = \footnotesize,
		xlabel=Temps (s),
		ylabel=Pression (hPa),
		extra y tick style={
			grid=major, 
			bleufoncechum,
			},
		major grid style={
			bleufoncechum,
			%thick,
			%dash pattern=on 3pt off 1.5pt
			}
	},
	every axis plot/.style={
			mark=none, 
			line width=0.2mm,
	},
}

\tikzstyle{plage}=[<->, shorten <=0.25mm, shorten >=0.25mm]
